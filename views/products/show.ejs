<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-lg-6 product-card">
            <div class="card text-center shadow mt-3 mx-auto" style="width: 18rem;">
                <div class="card-body">
                  <img src="<%= foundProduct.img %>" class="card-img-top" alt="...">
                  <h3 class="card-title"> <%= foundProduct.name %> </h3>
                  <h5 class="card-title"> Rs: <%= foundProduct.price %> </h5>
                  <p class="card-text"> <%= foundProduct.desc %> </p>
                  <a href="#" class="btn btn-primary">Buy Product</a>
                  <a href="#" class="btn btn-success">Add to cart</a>
                  <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-info">Edit Product</a>
                  <form action="/products/<%=foundProduct._id%>?_method=Delete" method="post">
                    <button class="btn btn-danger">Delete</button>
                  </form>

                </div>
            </div>
    </div>

    <div class="col-lg-6">
        <h2 class="display-5">Leave your review</h2>

        <form action="/products/<%=foundProduct._id%>/review" method="POST">
          <div>
            <label for="star" class="form-label">Rating: </label>
            <fieldset class="starability-basic">
              
              <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="rating" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="rating" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="rating" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="rating" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="rating" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <!-- <input type="range" name="rating" min="0" max="5" id="star" class="form-control"> -->
          </div>

          <div>
            <label for="bolna" class="form-label">Comments: </label>
            <textarea rows="5" name="comment" id="bolna" class="form-control"></textarea>
          </div>
          <button class="btn btn-sm btn-success">Add review</button>
        </form>



      <div class="my-3">

        <%for(let review of foundProduct.reviews){%>
          <div class="card">
            <!-- <div class="card-header">Rating: <%=review.rating%>  </div> -->
            <div class="card-body">
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%=review.rating%> stars
              </p>
              <p class="card-text"><%=review.comment%></p>
              <% if(review.createdAt){%>
                  <p><%=review.createdAt.toDateString()%></p>
              <% } %>

              <a href="#" class="btn btn-danger">Delete</a>
            </div>
          </div>

        <%}%>
          

        
        </div>


    </div>

</div>